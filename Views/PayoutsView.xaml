<UserControl x:Class="CloudMining.Views.PayoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudMining.Views"
			 xmlns:vm="clr-namespace:CloudMining.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	
	<UserControl.DataContext>
		<vm:PayoutsViewModel/>
	</UserControl.DataContext>

	<Grid>
		<DataGrid x:Name="dataGrid" ItemsSource="{Binding Payouts}" IsReadOnly="True" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="id" Binding="{Binding Id}"/>
				<DataGridTextColumn Header="Дата" Binding="{Binding Date}" SortDirection="Descending"/>
				<DataGridTextColumn Header="Монета" Binding="{Binding Currency.ShortName}"/>
				<DataGridTextColumn Header="Сумма" Binding="{Binding Amount}"/>
				<DataGridTextColumn Header="Завершена" Binding="{Binding IsDone}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
