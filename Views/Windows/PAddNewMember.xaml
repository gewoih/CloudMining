<Page x:Class="CloudMining.PAddNewMember"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudMining"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
	  FontSize="18"
	  Background="#2B467A"
	  Foreground="White"
      Title="PAddNewMember">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="8*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Button Grid.Row="1" Content="Добавить пользователя"/>
		<Button Grid.Row="2" Content="Отменить"/>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
			<StackPanel Margin="0 10">
				<TextBlock Text="Тип участника:" HorizontalAlignment="Center"/>
				<ComboBox/>
			</StackPanel>
			<StackPanel Margin="0 10">
				<TextBlock Text="Имя участника:" HorizontalAlignment="Center"/>
				<TextBox/>
			</StackPanel>
			<StackPanel Margin="0 10">
				<TextBlock Text="Дата вступления:" HorizontalAlignment="Center"/>
				<DatePicker/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>
